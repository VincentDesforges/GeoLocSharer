{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "mocha": true,
    "mongo": true
  },
  "rules": {
    "comma-dangle": ["warn", "never"],
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "arrow-parens": [ "error", "as-needed", {
      "requireForBlockBody": true
    }],
    "react/jsx-filename-extension": 0
  }
}
